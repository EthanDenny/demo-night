---

<BaseLayout title="Gallery | Demo Night">
  <div class="columns-1 md:columns-2 lg:columns-3 xl:columns-4 gap-4 space-y-4">
    {shuffledImages.map((filename) => (
      <div class="break-inside-avoid mb-4">
        <img
          src={`${baseUrl}images/${filename}`}
          alt={filename}
          class="w-full rounded shadow-md hover:shadow-lg transition-shadow duration-200"
        />
      </div>
    ))}
  </div>
</BaseLayout>

