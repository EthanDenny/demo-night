---
import Accordion from "./ui/accordion.astro";
import AccordionItem from "./ui/accordion-item.astro";
import AccordionContent from "./ui/accordion-content.astro";
import AccordionHeader from "./accordion-header.astro";
import Link from "./link.astro";
import { Image } from 'astro:assets';

// Import the specific images used in this component
import officeImage from '../assets/images/1/DSCF1597.jpg';
import presentationImage from '../assets/images/1/DSCF1647.jpg';
import ethanImage from '../assets/images/1/DSCF1088.jpg';

interface AccordionSectionProps {
  baseUrl: string;
}

const { baseUrl } = Astro.props as AccordionSectionProps;

const LUMA_URL = "https://luma.com/eihyagp4";
---

<Accordion className="flex flex-col gap-8">
  <AccordionItem>
    <AccordionHeader>When is it?</AccordionHeader>
    <AccordionContent>
      Demo Night 3 is coming this February!
    </AccordionContent>
  </AccordionItem>
  <Image
    src={officeImage}
    alt="Photo of the Spellbook office"
    class="rounded-base w-full"
    width={1200}
    quality={85}
    format="webp"
  />
  <AccordionItem>
    <AccordionHeader>What are the vibes like?</AccordionHeader>
    <AccordionContent>
      See more pictures in our
      <a
        href="/demo-night/gallery"
        class="font-bold underline cursor-pointer"
      >gallery</a>
      of past events! ðŸ“¸
    </AccordionContent>
  </AccordionItem>
  <AccordionItem>
    <AccordionHeader>
      How can I sign up to present / attend?
    </AccordionHeader>
    <AccordionContent>
      Registration for the <span class="italic">previous</span> event was <Link href={LUMA_URL}>here</Link>. No matter if you're
      presenting or only coming to watch, we'll send you an email with all
      the details.
    </AccordionContent>
  </AccordionItem>
  <Image
    src={presentationImage}
    alt="Photo of a presentation at Demo Night"
    class="rounded-base w-full"
    width={1200}
    quality={85}
    format="webp"
  />
  <AccordionItem>
    <AccordionHeader>What are the rules?</AccordionHeader>
    <AccordionContent>
      <ul class="list-disc pl-4 space-y-2">
        <li>
          You can present about anything you want, as long as it's technical
          in nature, and you built or created it in some way.
        </li>
        <li>
          Presentations should be about 5 minutes long, but we might have time for more, depending on the number of presenters!
        </li>
        <li>
          Other than that, it can be anything you want â€“ from functional
          programming, a neat AI tool you've been using, or about an
          <code class="italic">[insert niche topic here]</code> that
          you're really interested in.
        </li>
      </ul>
    </AccordionContent>
  </AccordionItem>
  <Image
    src={ethanImage}
    alt="Photo of Ethan Denny"
    class="rounded-base w-full"
    width={1200}
    quality={85}
    format="webp"
  />
  <AccordionItem>
    <AccordionHeader>Who's organizing it?</AccordionHeader>
    <AccordionContent>
      Demo Night is brought to you by
      <Link href="https://ethandenny.dev">Ethan Denny</Link> and
      <Link href="https://jackharrhy.dev">Jack Harrhy</Link>, with our hosting space provided by the fine
      folks at <Link href="https://spellbook.com">Spellbook</Link>.
      Gallery photos taken by <Link href="https://www.instagram.com/thecrypticcanadian/">Ethan Crann</Link> and <Link href="https://jack.camera">Jack</Link>.
    </AccordionContent>
  </AccordionItem>
</Accordion>

