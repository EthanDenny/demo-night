---
const { title, icon } = Astro.props;
---

<div class="brutalist-section">
  <h2
    class="text-2xl font-black flex items-center gap-4 mb-6 uppercase tracking-widest text-gray-900"
  >
    <span
      class="text-4xl bg-green-500 text-white px-3 py-1 border-4 border-green-700"
      >{icon}</span
    >
    {title}
  </h2>
  <div class="text-lg leading-relaxed font-bold text-gray-800"><slot /></div>
</div>
